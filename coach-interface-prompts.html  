                        </div>
                    </div>
                </div>

                <!-- Weitere Kategorien würden hier folgen... -->
                <div class="category-section">
                    <div class="category-header">🔍 Weitere Kategorien laden...</div>
                    <div style="padding: 20px; text-align: center; color: #718096;">
                        <p>DIAG1-DIAG15 • LÖS1-LÖS15 • META1-META10</p>
                        <p>WARN1-WARN6 • GRUPPE1-GRUPPE6 • LIVE1-LIVE6</p>
                        <p style="margin-top: 10px; font-size: 12px;">+ 53 weitere Prompts werden geladen...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Prompt-Datenbank (Ausschnitt - 83 Prompts)
        const prompts = {
            'GT1': 'Du bist ein erfahrener systemischer Coach. Führe eine strukturierte Auftragsklärung durch: 1) Was ist das konkrete Anliegen? 2) Was ist das gewünschte Ergebnis? 3) Welche Rahmenbedingungen gibt es? Nutze triadische Fragen zur Perspektivenerweiterung.',
            
            'GT2': 'Analysiere systematisch den Ist-Zustand: 1) Beschreibung der aktuellen Situation, 2) Beteiligte Personen/Systeme, 3) Bisherige Lösungsversuche, 4) Vorhandene Ressourcen. Verwende systemische Fragen zur Mustererkennung.',
            
            'GT3': 'Identifiziere das zentrale Spannungsfeld: 1) Zwischen welchen Polen bewegt sich der Coachee? 2) Welche widersprüchlichen Anforderungen bestehen? 3) Wie zeigt sich dieses Dilemma konkret? Entwickle Verständnis für die Dynamik.',
            
            'SF1': 'Nutze die lösungsfokussierte Zukunftsperspektive: "Stellen Sie sich vor, das Problem wäre gelöst. Wie würde Ihr Leben dann aussehen? Was wäre anders? Wer würde es zuerst bemerken?" Entwickle eine detaillierte positive Zukunftsvision.',
            
            'SF3': 'Verwende Skalierungsfragen: "Auf einer Skala von 0 bis 10, wo 10 das perfekte Ergebnis ist - wo stehen Sie heute? Was müsste passieren, um einen Punkt höher zu kommen? Was haben Sie bereits erreicht?" Konkretisiere jeden Schritt.',
            
            'DIAG1': 'Führe eine systemische Strukturdiagnose durch: 1) Wer gehört zum relevanten System? 2) Welche Rollen/Positionen gibt es? 3) Welche Kommunikationsmuster zeigen sich? 4) Wo sind die Machtstrukturen? Erstelle eine Systemlandkarte.',
            
            'LÖS1': 'Entwickle Lösungsoptionen ressourcenorientiert: 1) Welche Stärken sind verfügbar? 2) Was hat in ähnlichen Situationen geholfen? 3) Welche neuen Perspektiven sind möglich? 4) Welche konkreten ersten Schritte sind denkbar?',
            
            'META1': 'Reflektiere den Coaching-Prozess: 1) Wie erleben Sie unser Gespräch? 2) Was ist für Sie hilfreich? 3) Was möchten Sie vertiefen? 4) Wie können wir am besten weitermachen? Optimiere kontinuierlich den Prozess.',
            
            'LIVE1': 'Stelle diese Coaching-Frage live: [Frage wird automatisch eingefügt]. Achte auf: 1) Körpersprache, 2) Emotionale Reaktionen, 3) Sprachmuster, 4) Was nicht gesagt wird. Passe dein Vorgehen entsprechend an.'
        };

        // Chat-Funktionen
        function sendAiMessage() {
            const input = document.getElementById('aiInput');
            const message = input.value.trim();
            
            if (message) {
                addMessage('aiMessages', 'coach', message);
                input.value = '';
                
                // Simuliere KI-Antwort
                setTimeout(() => {
                    const responses = [
                        'Verstanden. Ich analysiere das und schlage passende Interventionen vor.',
                        'Das ist ein interessanter Punkt. Welcher Prompt könnte hier hilfreich sein?',
                        'Basierend auf dieser Information empfehle ich GT3 oder SF2.',
                        'Lass mich eine strukturierte Antwort entwickeln...'
                    ];
                    const randomResponse = responses[Math.floor(Math.random() * responses.length)];
                    addMessage('aiMessages', 'ai', randomResponse);
                }, 1000);
            }
        }

        function sendCoacheeMessage() {
            const input = document.getElementById('coacheeInput');
            const message = input.value.trim();
            
            if (message) {
                addMessage('coacheeMessages', 'coach', message);
                input.value = '';
            }
        }

        function addMessage(containerId, sender, text) {
            const container = document.getElementById(containerId);
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${sender}`;
            messageDiv.innerHTML = `
                ${text}
                <div class="message-time">${getCurrentTime()}</div>
            `;
            container.appendChild(messageDiv);
            container.scrollTop = container.scrollHeight;
        }

        function getCurrentTime() {
            return new Date().toLocaleTimeString('de-DE', {hour: '2-digit', minute: '2-digit'});
        }

        // Repository-Funktionen
        function copyPrompt(code) {
            const promptText = prompts[code] || `Prompt ${code} - Vollständiger Text wird aus Datenbank geladen...`;
            
            // In die Zwischenablage kopieren
            navigator.clipboard.writeText(promptText).then(() => {
                // Visuelles Feedback
                const button = event.target;
                const originalText = button.textContent;
                button.textContent = '✓ Kopiert';
                button.classList.add('copied');
                
                setTimeout(() => {
                    button.textContent = originalText;
                    button.classList.remove('copied');
                }, 2000);
                
                // In KI-Chat einfügen
                const aiInput = document.getElementById('aiInput');
                aiInput.value = promptText;
                aiInput.focus();
                
            }).catch(() => {
                // Fallback für ältere Browser
                const textArea = document.createElement('textarea');
                textArea.value = promptText;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
                
                alert('Prompt kopiert!');
            });
        }

        // Suchfunktion
        function setupSearch() {
            const searchInput = document.getElementById('searchInput');
            const searchResults = document.getElementById('searchResults');
            const promptCards = document.querySelectorAll('.prompt-card');
            
            searchInput.addEventListener('input', function() {
                const query = this.value.toLowerCase();
                let visibleCount = 0;
                
                promptCards.forEach(card => {
                    const code = card.getAttribute('data-code').toLowerCase();
                    const tags = card.getAttribute('data-tags').toLowerCase();
                    const title = card.querySelector('.prompt-title').textContent.toLowerCase();
                    const description = card.querySelector('.prompt-description').textContent.toLowerCase();
                    
                    const matches = code.includes(query) || 
                                  tags.includes(query) || 
                                  title.includes(query) || 
                                  description.includes(query);
                    
                    if (matches || query === '') {
                        card.style.display = 'block';
                        visibleCount++;
                    } else {
                        card.style.display = 'none';
                    }
                });
                
                searchResults.textContent = query ? 
                    `${visibleCount} Prompts gefunden` : 
                    '83 Prompts verfügbar';
            });
        }

        // Keyboard-Shortcuts
        document.addEventListener('keydown', function(e) {
            // Ctrl+F für Suche
            if (e.ctrlKey && e.key === 'f') {
                e.preventDefault();
                document.getElementById('searchInput').focus();
            }
            
            // ESC für Suche leeren
            if (e.key === 'Escape') {
                const searchInput = document.getElementById('searchInput');
                searchInput.value = '';
                searchInput.dispatchEvent(new Event('input'));
            }
            
            // Enter für Nachrichten senden
            if (e.key === 'Enter' && !e.shiftKey) {
                if (e.target.id === 'aiInput') {
                    e.preventDefault();
                    sendAiMessage();
                } else if (e.target.id === 'coacheeInput') {
                    e.preventDefault();
                    sendCoacheeMessage();
                }
            }
        });

        // Initialisierung
        document.addEventListener('DOMContentLoaded', function() {
            setupSearch();
            
            // Aktuelle Zeit für erste Nachrichten setzen
            document.getElementById('aiTime').textContent = getCurrentTime();
            document.getElementById('coacheeTime').textContent = getCurrentTime();
            
            // Auto-resize für Textareas
            const textareas = document.querySelectorAll('.chat-input');
            textareas.forEach(textarea => {
                textarea.addEventListener('input', function() {
                    this.style.height = 'auto';
                    this.style.height = Math.min(this.scrollHeight, 120) + 'px';
                });
            });
        });
    </script>
</body>
</html>